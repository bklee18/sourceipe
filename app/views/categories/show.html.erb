<div class="wrapper wrapper_padding cleafix">
  <h1> <%= @recipes.first.category.name %></h1>

  <% @recipes.each do |recipe| %>
    <div id="category_show_content" class="skinny_wrapper wrapper_padding">
     <header>
      <h3>
        <%= link_to recipe.name, category_recipe_path(recipe.category, recipe), id: 'index_title'%>
      </h3>
      <p class="posted_by">posted by <a class="posted_by" href="/users/<%= recipe.user.id %>"><%= recipe.user.username %></a></p>
      <h6> <%= recipe.weighted_ratings %> stars rating </h6>
      </header>
    </div>
  <% end %>
</div>