<div>
  <%= form_tag("/search", method: "get") do %>
    <%= label_tag(:search, "Search for:") %>
    <%= text_field_tag(:search) %>
    <%= submit_tag("Search") %>
  <% end %>
</div>

<div class="wrapper wrapper_padding cleafix">

  <div class="col-2 home_content">
    <h2><%= link_to 'Appetizers', category_path(@appetizers.first.category)%></h2>
    <hr>
    <ul>
      <% @appetizers.each do |recipe| %>
          <li> <%= link_to recipe.name, category_recipe_path(recipe.category, recipe) %>  </li>
          <li> <%= recipe.weighted_ratings %>  </li>
      <% end %>
    </ul>
  </div>

  <div class="col-2 home_content">
    <h2><%= link_to 'Salads', category_path(@salads.first.category)%></h2>
    <hr>
    <ul>
      <% @salads.each do |recipe| %>
          <li> <%= link_to recipe.name, category_recipe_path(recipe.category, recipe) %>  </li>
      <% end %>
    </ul>
  </div>

  <div class="col-3 home_content">
    <h2><%= link_to 'Entrees', category_path(@entrees.first.category)%></h2>
    <hr>
    <ul>
      <% @entrees.each do |recipe| %>
          <li> <%= link_to recipe.name, category_recipe_path(recipe.category, recipe) %>  </li>
      <% end %>
    </ul>
  </div>

  <div class="col-3 home_content">
    <h2><%= link_to 'Desserts', category_path(@desserts.first.category)%></h2>
    <hr>
    <ul>
      <% @desserts.each do |recipe| %>
          <li> <%= link_to recipe.name, category_recipe_path(recipe.category, recipe) %>  </li>
      <% end %>
    </ul>
  </div>




</div>
